<%= form_with model: @event do |form| %>
    <%= form.label :title %><br />
    <%= form.text_field :title %><br /><br />

    <%= form.label :location %><br />
    <%= form.text_field :location %><br /><br />

    <%= form.label :date %><br />
    <%= form.text_field :date, placeholder: "01/01/2022" %><br /><br />

    <%= form.label :description %><br />
    <%= form.text_area :description, placeholder: "Tell us a bit about your event." %><br /><br />

    <%= form.submit "Create" %>
<% end %>